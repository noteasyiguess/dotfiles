# Git
alias g='git'

# Kitty
alias icat='kitty +kitten icat'

# Grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias lgrep='grep -P'

# ls
alias ls='exa'
alias lt='ls -schanged -l'
alias lz='ls -ssize -l'
alias sl='ls'

# Other common utils
alias diff='diff --color=auto'
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -v'
alias mkdir='mkdir -pv'
alias less='less -FRXc'
alias sc='systemctl'

# dnf
alias dfi='sudo dnf install'
alias dfs='sudo dnf search'
alias dfr='sudo dnf remove'
alias dfu='sudo dnf upgrade'
alias dfii='sudo dnf --setopt=install_weak_deps=False install'
alias dfuu='sudo dnf --setopt=install_weak_deps=False upgrade'

# apt
alias ati='sudo apt install'
alias atf='sudo apt info'
alias ats='sudo apt search'
alias atp='sudo apt purge'
alias atu='sudo apt update && sudo apt full-upgrade'

alias tldr='tldr -p'
alias ytdl='youtube-dl'

alias hd='hexdump -C'
alias dud='du -d1 -h'
alias duf='du -sh *'
alias nano='nano -W'
alias wget='wget -c'
alias bc='bc --mathlib --quiet'
alias fd='fdfind -I'

