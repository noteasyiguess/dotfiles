# Emacs
alias -g ef="emacsclient -nc -a ''"
alias -g et="TERM=$EM_TERM emacsclient -t -a ''"
# alias -g eff="emacsclient -nc -a ''"
# alias -g ett="TERM=$EM_TERM emacsclient -t -a ''"
alias -g eff="emacs"
alias -g ett="TERM=$EM_TERM emacs -nw"
# alias -g ei="TERM=$EM_TERM emacs -Q -nw --load /home/mns/.emacs.d/term.el"
alias -g e="et"

# Utils
alias cal3='cal -3'
alias today='date "+%A, %B %-d, %Y"'
alias weeknum='date +%V'
alias imv='imv-wayland'
alias py='python3'

